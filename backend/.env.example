# ============================================================
# Backend Environment Variables
# Copy this to .env and fill in your values
# ============================================================

# --- Groq AI (required) ---
GROQ_API_KEY=your_groq_api_key_here

# --- JWT Auth (required — use a strong random key in production) ---
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=change-me-in-production-must-be-at-least-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# --- Database ---
# Local development (SQLite):
DATABASE_URL=sqlite+aiosqlite:///./resume2portfolio.db
# Production (PostgreSQL from Neon.tech):
# DATABASE_URL=postgresql+asyncpg://user:password@host/dbname

# --- Frontend URL (for CORS) ---
# Local:
FRONTEND_URL=http://localhost:5173
# Production (comma-separated if multiple):
# FRONTEND_URL=https://your-frontend.vercel.app

# --- File uploads (local only — not needed in production) ---
UPLOAD_DIR=./uploads
